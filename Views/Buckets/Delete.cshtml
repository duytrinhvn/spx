    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this bucket?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bucket.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bucket.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bucket.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bucket.Description)
        </dd>
        <dt class="col-sm-2">
